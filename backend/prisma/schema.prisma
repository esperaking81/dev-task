// prisma/schema.prisma

generator client {
  provider   = "prisma-client"
  output     = "./generated"
  engineType = "client"
  runtime    = "bun"
}

datasource db {
  provider = "postgresql"
}

enum TaskStatus {
  TODO
  IN_PROGRESS
  DONE
}

enum TaskPriority {
  LOW
  MEDIUM
  HIGH
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  tasks         Task[] @relation("TaskUser")
  assignedTasks Task[] @relation("TaskAssignees")
}

model Task {
  id          String   @id @default(uuid())
  title       String
  description String?
  status      TaskStatus   @default(TODO)
  order       Int      @default(0) // For sorting subtasks
  dueDate     DateTime?
  priority    TaskPriority   @default(MEDIUM)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // User relation
  userId String
  user   User   @relation("TaskUser", fields: [userId], references: [id], onDelete: Cascade)

  // Assignees relation
  assignees User[] @relation("TaskAssignees")

  // Self-relation for subtasks
  parentId String?
  parent   Task?   @relation("TaskSubtasks", fields: [parentId], references: [id], onDelete: Cascade)
  subtasks Task[]  @relation("TaskSubtasks")

  // Tags relation
  tags Tag[]

  @@index([userId])
  @@index([parentId])
}

model Tag {
  id        String   @id @default(uuid())
  name      String   @unique
  color     String?
  createdAt DateTime @default(now())

  tasks Task[]
}
